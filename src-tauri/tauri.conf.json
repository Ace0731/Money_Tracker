{
    "$schema": "https://schema.tauri.app/config/2.0",
    "productName": "Money Tracker",
    "version": "1.2.0",
    "identifier": "com.moneytracker.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.ico"
        ]
    },
    "app": {
        "windows": [
            {
                "title": "Money Tracker",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600
            }
        ],
        "security": {
            "csp": null
        }
    }
}